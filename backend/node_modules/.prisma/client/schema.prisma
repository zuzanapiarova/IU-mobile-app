datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              Int      @id @default(autoincrement())
  name            String
  email           String?
  themePreference String   @default("system")
  createdAt       DateTime @default(now())
  habits          Habit[] // reference for habits that belongs to this user
}

model Habit {
  id          Int               @id @default(autoincrement())
  name        String
  frequency   String            @default("daily")
  createdAt   DateTime          @default(now())
  user        User              @relation(fields: [userId], references: [id])
  userId      Int
  completions HabitCompletion[] // reference for completions that belong to this habit 
}

model HabitCompletion {
  id        Int      @id @default(autoincrement())
  habit     Habit    @relation(fields: [habitId], references: [id])
  habitId   Int
  date      String
  status    Boolean
  timestamp DateTime @default(now())

  @@unique([habitId, date]) // matches the UNIQUE(habit_id, date)
}
